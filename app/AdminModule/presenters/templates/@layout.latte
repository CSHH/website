<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>{ifset title}{include title|striptags} | {/ifset}Czech Silent Hill Heaven</title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700,300italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{asset $basePath . '/css/common.css'}">
    <link rel="stylesheet" href="{asset $basePath . '/css/admin.css'}">
    <link rel="shortcut icon" href="{asset $basePath . '/favicon.ico'}">

    {block head}{/block}
</head>

<body>
    {include '../../../presenters/templates/include/flashes.latte'}

    <nav id="top-nav-bar">

        <div id="theme-switch">
            <a n:href=":Front:Homepage:default">Czech Silent Hill Heaven</a>
        </div>

        <div id="nav-bar-items">
            <a class="item" n:href="Homepage:default">Uživatelská sekce</a>
            <a class="item" n:href="Settings:me">Já</a>
            <a class="item" n:href="Sign:out">Odhlásit</a>
        </div>

        <div class="clear-both"></div>

    </nav>

    <div id="content">

        {include content}

    </div>

    <script src="{asset $basePath . '/bower_components/jquery/dist/jquery.js'}"></script>
    <script src="{asset $basePath . '/bower_components/nette-forms/src/assets/netteForms.js'}"></script>
    <script src="{asset $basePath . '/bower_components/nette.ajax.js/nette.ajax.js'}"></script>
    <script src="{asset $basePath . '/bower_components/ckeditor/ckeditor.js'}"></script>
    <script src="{asset $basePath . '/js/main.js'}"></script>

    {block scripts}{/block}
</body>
</html>
