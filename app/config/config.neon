parameters:
    thumbsDir: /thumbs
    uploadDir: /upload
    videoThumbnailsDir: /video_thumbnails
    contactEmail: john.doe@example.com
    vimeoOembedEndpoint: https://vimeo.com/api/oembed.xml

php:
    date.timezone: Europe/Prague

application:
    errorPresenter: Error
    mapping:
        *: App\*\*Presenter

session:
    autoStart: true
    expiration: 14 days
    save_path: %tempDir%/sessions

services:
    authenticator: App\Security\Authenticator
    router: App\Router\RouterFactory::createRouter
    paginatorFactory: App\Utils\PaginatorFactory
    videoThumbnail: App\Videos\VideoThumbnail(%wwwDir%, %videoThumbnailsDir%, %vimeoOembedEndpoint%, /images/default-video-image.jpg)

    menuCache: App\Caching\MenuCache(
        Nette\Caching\Cache(
            Nette\Caching\Storages\FileStorage(%tempDir%/cache), 'menu'
        )
    )

    articleForm:
        implement: App\Forms\ArticleFormInterface
    galleryForm:
        implement: App\Forms\GalleryFormInterface
    profileSettingsForm:
        implement: App\Forms\ProfileSettingsFormInterface
    signInForm:
        implement: App\Forms\SignInFormInterface
    signPasswordForm:
        implement: App\Forms\SignPasswordFormInterface
    signResetForm:
        implement: App\Forms\SignResetFormInterface
    signUpForm:
        implement: App\Forms\SignUpFormInterface
    VideoForm:
        implement: App\Forms\VideoFormInterface
    WikiDraftForm:
        implement: App\Forms\WikiDraftFormInterface
    WikiForm:
        implement: App\Forms\WikiFormInterface

    menuControl:
        implement: App\Components\MenuControlInterface
    visualPaginatorControl:
        implement: App\Components\VisualPaginatorControlInterface

    - App\Repositories\ArticleRepository(@doctrine.dao(App\Entities\ArticleEntity))
    - App\Repositories\ImageRepository(
        %wwwDir%,
        %uploadDir%,
        @doctrine.dao(App\Entities\ImageEntity),
        @doctrine.dao(App\Entities\FileEntity)
    )
    - App\Repositories\TagRepository(@doctrine.dao(App\Entities\TagEntity))
    - App\Repositories\UserRepository(@doctrine.dao(App\Entities\UserEntity))
    - App\Repositories\VideoRepository(
        %vimeoOembedEndpoint%,
        @doctrine.dao(App\Entities\VideoEntity)
    )
    - App\Repositories\WikiDraftRepository(@doctrine.dao(App\Entities\WikiDraftEntity))
    - App\Repositories\WikiRepository(@doctrine.dao(App\Entities\WikiEntity))

extensions:
    annotations: Kdyby\Annotations\DI\AnnotationsExtension
    asset: HeavenProject\AssetLoader\AssetLoaderExtension
    console: Kdyby\Console\DI\ConsoleExtension
    doctrine: Kdyby\Doctrine\DI\OrmExtension
    events: Kdyby\Events\DI\EventsExtension
    fixtures: Zenify\DoctrineFixtures\DI\FixturesExtension
    gitPanel: HeavenProject\GitBranchPanel\GitBranchPanelExtension
    migrations: Zenify\DoctrineMigrations\DI\MigrationsExtension
    sessionPanel: Kdyby\SessionPanel\DI\SessionPanelExtension
    thumb: HeavenProject\Thumbnailer\DI\ThumbExtension
    timestampable: Zenify\DoctrineBehaviors\DI\TimestampableExtension
    translatable: Zenify\DoctrineBehaviors\DI\TranslatableExtension
    translation: Kdyby\Translation\DI\TranslationExtension
    userCommandLine: HeavenProject\UserCommandLine\UserCommandLineExtension

asset:
    publicDir: %wwwDir%
    targetDir: %tempDir%/assets

migrations:
    table: _migrations

thumb:
    wwwDir: %wwwDir%
    thumbDir: %thumbsDir%

translation:
    default: cs

userCommandLine:
    targetEntity: App\Entities\UserEntity
