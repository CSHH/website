{form form, class => 'ajax modal', data-modal => 'sign-in-form'}

    {include 'include/modalFormHeader.latte', header => 'Přihlásit'}

    {snippet formErrors}

        {include 'include/errors.latte', form => $form}

    {/snippet}

    <div class="form-container">

        {include 'include/email.latte', _form => $form}

        {include 'include/password.latte', _form => $form}

        {include 'include/submit.latte', _form => $form}

        <div class="modal-links-wrapper">
            {include 'include/switchToSignUpForm.latte'}
            {include 'include/switchToSignResetForm.latte'}
        </div>

    </div>

{/form}
