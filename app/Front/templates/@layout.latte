<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>{ifset title}{include title|striptags} | {/ifset}Czech Silent Hill Heaven</title>

    <script>
        var App = App || {};
        App.BASE_PATH = {$basePath};
    </script>

    {* must be here so the theme will load sooner *}
    <script src="{$basePath}/libs/js/libs-front.js"></script>
    <script src="{$basePath}/js/main-front.js"></script>

    <script>
        lightbox.option({
            'wrapAround': true
        });
    </script>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700,300italic">
    <link rel="stylesheet" href="{$basePath}/libs/css/libs-front.css">
    <link rel="stylesheet" href="{$basePath}/css/main-front.css">
    <link rel="stylesheet" href="{$basePath}/css/theme-fog.css" id="theme-stylesheet">
    <link rel="shortcut icon" href="{$basePath}/favicon.ico">

    {block head}{/block}
</head>

<body>
    {include '../../Presenters/templates/include/flashes.latte'}

    <nav id="top-nav-bar">

        <div id="theme-switch" class="pointer">
            Téma
        </div>

        <div id="nav-bar-items">
            <a href="http://silenthill.heavenforum.org" target="_blank">Fórum</a>
            {if $user->isLoggedIn()}
                <a class="item" n:href=":Admin:Homepage:default">Uživatelská sekce</a>
                <a class="item" n:href=":Admin:Settings:me">Já</a>
                <a class="item" n:href=":Admin:Sign:out">Odhlásit</a>
            {else}
                <span class="item pointer" data-modal-target="sign-in-form">Přihlásit</span>
                <span class="item pointer" data-modal-target="sign-up-form">Registrovat</span>
            {/if}
        </div>

        <div class="clear-both"></div>

    </nav>

    <div id="bg-body-wrapper" style="background-image: url({$basePath}/images/bg-fog.jpg)">

        <a id="bg-body-wrapper-gap" n:href="Homepage:default"></a>

        <div id="body-wrapper">

            <nav id="menu">

                {control menuControl}

            </nav>

            <div id="content">

                {include content}

            </div>

            <div class="clear-both"></div>

        </div>

    </div>

    {include 'include/footer.latte'}

    <div id="black-filter"></div>

    {include 'include/cookies.html'}

    {if $user->isLoggedIn() === false}
        {control signInForm}
        {control signUpForm}
        {control signResetForm}
    {/if}

    {block scripts}{/block}

    {include 'include/backlinks.com.latte'}
</body>
</html>
