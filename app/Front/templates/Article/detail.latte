{block content}

<div class="content-body">

    {if !$article->isActive}

        <div class="action-buttons">

            <a n:href="activate!, articleId => $article->id" data-confirm="{_}locale.alert.question{/_}">Povolit</a>

            <a n:href="delete!, articleId => $article->id" data-confirm="{_}locale.alert.question{/_}">Smazat</a>

        </div>

    {/if}

    <h1 n:block="title">{$article->name}</h1>

    <div class="text-content">{$article->text|noescape}</div>

</div>
